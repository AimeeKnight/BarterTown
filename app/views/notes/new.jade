extends ../shared/template

block content
  .row
    .small-12.columns
      form(action='/notes', method='post')
        fieldset
          legend= title
          .row
            .small-4.columns
              label Title
              input(name='title', type='text', autofocus=true)
            .small-4.columns
              label Date Created
              input(name='dateCreated', type='date')
            .small-4.columns
              label Tags
              input(name='tags', type='text')
          .row
            .small-12.columns
              label Body
              textarea(name='body')
          .row
            .small-12.columns
              button.small.radius Create

