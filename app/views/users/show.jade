extends ../shared/template

block content
  .row
    .small-12.columns
      div.panel
        h1= user.userName
        h4= user.email
        if gravatar
          img(src= gravatar).user-img
        if !gravatar
          img(src= user.userPhoto).user-img
      .row
        .small-12.columns
            a.radius.button(href="#" data-reveal-id="myModal") Add Item

  .row
    .small-6.columns
      h3.panel Items List:
      table
        thead
          th Item
          th Photo
          th Auction
          th Delete
        tbody
          each item in items
            if item.available == false
              tr
                td: a(href='/items/' + item._id)= item.name
                td: img(src= item.photo).user-image
                td  
                  form(action='/items/toggle/' + item._id, method='post')
                    input(type='hidden', name='_method', value='post')
                    button.small.radius Add To Auction
                td
                  form(action='/items/' + item._id, method='post')
                    input(type='hidden', name='_method', value='delete')
                    button.alert.small.radius Delete
    .small-6.columns
      h3.panel Items for auction:
      table
        thead
          th Item
          th Photo
          th Remove
        tbody
          each item in items
            if item.available == true
              tr
                td: a(href='/items/' + item._id)= item.name
                td: img(src= item.photo).item-img
                td 
                  if item.bids.length === 0
                    form(action='/items/toggle/' + item._id, method='post')
                      input(type='hidden', name='_method', value='post')
                      button.small.radius Remove From Auction
  //form(action='/items/' + item._id, method='post')
    //input(type='hidden', name='_method', value='delete')
    //button.alert.small.radius Delete
  .row
    .small-12.columns
      div#myModal.createItemForm.reveal-modal.tiny(data-reveal)
        .row
          .small-12.columns
            form(action='/items', method='post', enctype='multipart/form-data')
              label Name
                input(name='name', type='text', autofocus=true, required)
              label Tags
                input(name='tags', type='text', placeholder='sword, katana, awesome, metal', required)
              label Photo
                input(name='photo', type='file', required)
              label description
                textarea(name='description', cols='300', rows='10', placeholder='Tell us about your item!', required)
                button#createItemButton.close-reveal-model Create
        a.close-reveal-modal &#215;
