extends ../shared/template

block content
  .row
    .small-12.columns
      form(action='/items', method='post', enctype='multipart/form-data')
        fieldset
          legend= title
          .row
            .small-4.columns
              label Name
              input(name='name', type='text', autofocus=true, required)
          .row
            .small-4.columns
              label Description
              input(name='description', type='text', required)
          .row
            .small-4.columns
              label Tags
              input(name='tags', type='text', required)
          .row
            .small-4.columns
              label Photo
              input(name='photo', type='file', required)
          .row
            .small-12.columns
              button.small.radius Create


